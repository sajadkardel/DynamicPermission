@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>ManageRole</h1>

<a asp-controller="ManageRole" asp-action="AddRole" class="btn btn-success">Add Role</a>

@if (Model.Any())
{
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="card mt-2">
            <div class="card-header">
                Name = @Model[i].Name
            </div>

            <div class="card-footer">

                <a asp-controller="ManageRole" asp-action="AddPermissionToRole" asp-route-id="@Model[i].Id"
                   class="btn btn-primary">Add To Permission</a>

                <a asp-controller="ManageRole" asp-action="RemovePermissionFromRole" asp-route-id="@Model[i].Id"
                   class="btn btn-primary">Remove From Permission</a>

                <a asp-controller="ManageRole" asp-action="DeleteRole" asp-route-id="@Model[i].Id"
                   class="btn btn-danger">Delete Role</a>


            </div>

        </div>
    }
}
else
{
    <p>No Role Found.</p>
}
